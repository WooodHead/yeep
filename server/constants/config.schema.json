{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Yeep config object",
  "type": "object",
  "properties": {
    "baseUrl": {
      "type": "string",
      "maxLength": 255
    },
    "jwt": {
      "type": "object",
      "properties": {
        "type": {
          "enum": ["hmac"]
        },
        "secret": {
          "type": "string"
        }
      },
      "required": ["type", "secret"]
    },
    "database": {
      "type": "object",
      "properties": {
        "mongo": {
          "type": "object",
          "properties": {
            "uri": {
              "type": "string"
            }
          },
          "required": ["uri"]
        }
      },
      "required": ["mongo"]
    }
  },
  "storage": {
    "type": "object",
    "properties": {
      "type": {
        "enum": ["fs"]
      },
      "uploadDir": {
        "type": "string"
      }
    },
    "required": ["type", "uploadDir"]
  },
  "required": ["baseUrl", "jwt", "database", "storage"],
  "additionalProperties": false
}
