{
  "name": "yeep",
  "version": "1.0.0",
  "description": "User management made easy",
  "main": "dist/index.js",
  "scripts": {
    "start": "node --require dotenv/config dist/index.js",
    "dev": "node --require dotenv/config --require @babel/register server/index.js",
    "watch": "nodemon server/index.js --exec 'node --require dotenv/config --require @babel/register'",
    "lint": "eslint .",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "build": "babel server --out-dir dist --source-maps --ignore '**/*.test.js,**/*.spec.js,**/*.snapshop.json' --verbose",
    "postinstall": "npm run migrate && npm run build",
    "test": "PORT=5002 jest --config=config/jest.json --runInBand",
    "coverage": "jest --config=config/jest.json --coverage",
    "migrate": "MIGRATION_CONFIG_PATH=./config/migrate.js mongoose-migrate-2",
    "prettier-fix": "prettier --write --config .prettierrc '**/*.js'"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/yeepio/yeep.git"
  },
  "keywords": [
    "user",
    "session",
    "login",
    "role",
    "priviledge",
    "rbac"
  ],
  "author": {
    "name": "Dimitrios C. Michalakos"
  },
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/yeepio/yeep/issues"
  },
  "homepage": "https://github.com/yeepio/yeep#readme",
  "devDependencies": {
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^23.6.0",
    "eslint": "^5.6.1",
    "eslint-config-prettier": "^3.1.0",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-prettier": "^2.6.0",
    "husky": "^1.0.0",
    "jest-cli": "^23.6.0",
    "lint-staged": "^7.0.5",
    "nodemon": "^1.18.4",
    "prettier": "^1.14.3",
    "prettier-eslint": "^8.8.1",
    "regenerator-runtime": "^0.12.1",
    "supertest": "^3.3.0"
  },
  "dependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/register": "^7.0.0",
    "@koa/cors": "^2.2.2",
    "awaiting": "^3.0.0",
    "axios": "^0.18.0",
    "binary-search": "^1.3.4",
    "bluebird": "^3.5.2",
    "boom": "^7.2.0",
    "compression": "^1.7.3",
    "date-fns": "^1.29.0",
    "dotenv": "^6.0.0",
    "gravatar": "^1.6.0",
    "isemail": "^3.1.3",
    "joi": "^13.7.0",
    "jsonwebtoken": "^8.3.0",
    "koa": "^2.5.3",
    "koa-bodyparser": "^4.2.1",
    "koa-compose": "^4.1.0",
    "koa-connect": "^2.0.1",
    "koa-helmet": "^4.0.0",
    "koa-router": "^7.4.0",
    "koa-sslify": "^2.1.2",
    "lodash": "^4.17.11",
    "mongoose": "^5.3.1",
    "mongoose-migrate-2": "^0.2.4",
    "normalize-email": "^1.1.1",
    "randomstring": "^1.1.5",
    "rimraf": "^2.6.2",
    "typeof": "^1.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint"
    ]
  },
  "nodemonConfig": {
    "verbose": true,
    "ignore": [
      ".git",
      "node_modules",
      "*.spec.js",
      "*.test.js",
      "__tests__",
      "dist"
    ]
  }
}
