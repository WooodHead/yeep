{
  "rootDir": "..",
  "testEnvironment": "node",
  "collectCoverageFrom": [
    "server/**/*.{js}"
  ],
  "testPathIgnorePatterns": [
    "/node_modules",
    "/dist"
  ],
  "transform": {
    "^.+\\.jsx$": "babel-jest",
    "^.+\\.js$": "babel-jest"
  },
  "setupFiles": [
    "<rootDir>/config/jestSetup.js"
  ],
  "verbose": true
}
